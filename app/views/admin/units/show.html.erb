<h1 class='text-3xl mb-5 font-bold items-center'> <%= t('activerecord.models.unit.one') %>: <%= @unit.number%> </h1>
<%= render 'layouts/notice_and_alert' %>
<div class='w-full'>
  <div class="p-6 bg-white border border-stone-200 rounded-lg shadow-sm dark:bg-gray-900 dark:border-gray-700 mb-6"> 
    <p class="text-2xl font-bold text-stone-800 dark:text-white">Detalles de la unidad</p>
    <p> Edificio: <%= @unit.building.number%>-<%= @unit.building.name %> </p>
    <p> Número: <%= @unit.building.address%> </p>
    <hr>
    <p> Número: <%= @unit.number%> </p>
    <p> Propietario: <%= @unit&.owner&.email%> </p>
    <p> Inquilino: <%= @unit&.tenant%> </p>
  </div>
</div>
