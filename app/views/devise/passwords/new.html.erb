<%= render 'devise/form_wrapper' do %>

  <h2 class='text-2xl font-bold mb-3'>Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="input-devise-container">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-devise' %>
    </div>

    <div class="actions">
      <%= f.submit "Reset password", class: 'w-full text-white bg-blue-500 hover:bg-blue-800 focus:ring-1 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-outline-none mb-3'%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
