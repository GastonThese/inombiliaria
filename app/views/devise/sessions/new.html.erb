<div class='py-5 px-6 text-stone-700 dark:bg-slate-500/20 rounded-2xl shadow-lg dar:shadow-none dark:border dark:border-slate-400 dark:text-white/80'>
  <h2 class='text-3xl font-bold mb-3'>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="w-full max-w-sm min-w-[200px] mb-3">
      <%= f.label :email, class: 'font-bold'%><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-full bg-transparent placeholder:text-white/50  text-sm border border-stone-400 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:shadow focus:border-cyan-300' %>
    </div>

    <div class="w-full max-w-sm min-w-[200px] mb-3">
      <%= f.label :password, class: 'font-bold' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'w-full bg-transparent placeholder:text-white/50  text-sm border border-stone-400 rounded-md px-3 py-2 transition duration-300 ease focus:outline-none focus:shadow focus:border-cyan-300' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'font-semibold hover:text-cyan-700 dark:hover:text-cyan-300 cursor-pointer' %>
      </div>
    <% end %>

    <div class= ''>
      <%= f.submit "Log in", class:  "w-full text-white bg-cyan-700 hover:bg-cyan-800 focus:ring-1 focus:ring-cyan-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-cyan-600 dark:hover:bg-cyan-700 focus:outline-none dark:focus:ring-outline-none"  %>
    </div>
    <p class="text-blue-600 mb-3 "><%= notice %></p>
    <p class="text-red-600 mb-3"><%= alert %></p>
  <% end %>


  <%= render "devise/shared/links" %>

</div>

